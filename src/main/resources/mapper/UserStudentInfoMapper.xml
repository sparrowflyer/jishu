<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
  
<mapper namespace="com.wanmoxing.jishu.mapper.UserStudentInfoMapper">  

	<resultMap id="userStudentInfoResultMap" type="com.wanmoxing.jishu.bean.UserStudentInfo">
		<id property="userId" column="USER_ID"/>
		<result property="major" column="MAJOR"/>
		<result property="topics" column="TOPICS"/>
		<result property="honors" column="HONORS"/>
		<result property="contacts" column="CONTACTS"/>
		<result property="contactsPrice" column="CONTACTS_PRICE"/>
		<result property="scoreResponse" column="SCORE_RESPONSE"/>
		<result property="scoreAttitude" column="SCORE_ATTITUDE"/>
		<result property="scoreProfessional" column="SCORE_PROFESSIONAL"/>
	</resultMap>
	
	<update id="update" parameterType="com.wanmoxing.jishu.bean.UserStudentInfo">
        UPDATE jishu.T_USER_STUDENT_INFO 
        SET MAJOR=#{major},TOPICS=#{topics},HONORS=#{honors},CONTACTS=#{contacts},
        	CONTACTS_PRICE=#{contactsPrice},SCORE_RESPONSE=#{scoreResponse},
        	SCORE_ATTITUDE=#{scoreAttitude},SCORE_PROFESSIONAL=#{scoreProfessional}
        WHERE USER_ID=#{userId}
    </update>
	
    <select id="findByUserId" parameterType="int" resultMap="userStudentInfoResultMap">
        SELECT * FROM jishu.T_USER_STUDENT_INFO WHERE USER_ID=#{userId}
    </select>
    
</mapper>